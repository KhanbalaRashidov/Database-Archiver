{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "JobConfiguration": {
    "Name": "Example Job Name",
    "Cron": "0/20 * * ? * *"
  },

  "ArchiverConfiguration": {
    "Source": {
      "Provider": "MSSQL",
      "Host": "localhost",
      "TransferQuantity": 100,
      "DeleteAfterArchived": true,
      "Settings": {
        "ConnectionString": "Server=localhost;Database=AdventureWorks2022;Trusted_Connection=True;TrustServerCertificate=True",
        "Schema": "Person",
        "Table": "BusinessEntityAddress",
        "IdColumn": "BusinessEntityID"
      }
    },
    "Target": {
      "Provider": "MSSQL",
      "Host": "localhost",
      "Settings": {
        "ConnectionString": "Server=localhost;Database=AdventureWorks2022;Trusted_Connection=True;TrustServerCertificate=True",
        "Schema": "Person",
        "Table": "BusinessEntityAddressCopy",
        "IdColumn": "BusinessEntityID"
      }
    }
  }
}
